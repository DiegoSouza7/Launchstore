<div class="item">
    <div>Email</div>
    <div class="input">
        <input
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>
 
